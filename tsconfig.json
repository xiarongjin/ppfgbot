{
  "compilerOptions": {
    "outDir": "dist",
    "lib": ["ESNext", "DOM"],
    "module": "es6",
    "target": "es5",
    "jsx": "react",
    "allowJs": true,
    "moduleResolution": "node",
    "esModuleInterop": true
  },

  "exclude": ["node_modules/"],
  "include": ["src/*.ts"],
  "ts-node": {
    "esm": true
  }
}
